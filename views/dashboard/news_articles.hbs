<section class="main main-text-wrapper">
  <div class="main__wrapper-purple padding-left padding-right">
    <h1 class="main__wrapper-purple__text">Administrative Dashboard : News Articles
    </h1>
  </div>
  <div class="main__wrapper main__negative-top-margin">
    <table class="padding-left padding-right padding-bottom">
      <caption class="padding-top">News Articles</caption>
      <tr>
        <th scope="col">Residence</th>
        <th scope="col">Headline</th>
        <th scope="col">Status</th>
        <th scope="col">Publisher</th>
        <th scope="col">Controls</th>
      </tr>
      {{#each news_articles as |news_article|}}
      <tr>
        <th scope="row"><a href="/residences/{{residence.slug}}?ref=admin"
            class="main__wrapper__link">{{residence.name}}</a></th>
        <td>{{headline}}</td>
        <td>{{status}}</td>
        <td>{{publisher}}</td>
        <td><a class="main__wrapper__link" rel="nofollow" href="/dashboard/news_articles/{{id}}">Edit</a></td>
      </tr>
      {{/each}}
    </table>
  </div>
</section>