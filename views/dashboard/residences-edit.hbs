<section class="main main-text-wrapper">
  <div class="main__wrapper-purple padding-left padding-right">
    <h1 class="main__wrapper-purple__text">Editing <a href="/residences/{{residence.slug}}?ref=admin-edit"
        class="main__infobox__link">{{residence.name}}</a>
    </h1>
  </div>
  <div class="main__wrapper main__negative-top-margin">
    <div class="padding-left padding-right padding-top padding-bottom">
      <p style="text-align:center;">
        <a href="/dashboard/residences/{{residence.slug}}/news_article/new"
          class="button button__wrapper__a-remove-underline">Add News Article</a>
      </p>
      <p style="text-align:center;">
        <a href="/dashboard/residences/{{residence.slug}}/delete"
          class="button button__wrapper__a-remove-underline">Delete Residence</a>
      </p>
    </div>
  </div>
  <div class="main__wrapper">
    <div class="padding-left padding-right padding-top padding-bottom">
      <form action="/dashboard/residences/{{residence.slug}}" method="POST">
        <div class="field">
          <label class="label" for="name">Name</label>
          <div class="input-wrapper">
            <input id="name" name="name" type="text" class="input" required spellcheck="false" autocomplete="off"
              value="{{residence.name}}">
          </div>
        </div>
        <div class="field">
          <label class="label" for="address">Address</label>
          <div class="input-wrapper">
            <input id="address" name="address" type="text" class="input" required spellcheck="false" autocomplete="off"
              value="{{residence.address}}">
          </div>
        </div>
        <div class="field">
          <label class="label" for="latitude">Latitude</label>
          <div class="input-wrapper">
            <input id="latitude" name="latitude" type="number" step="any" class="input" required spellcheck="false"
              autocomplete="off" value="{{residence.latitude}}">
          </div>
        </div>
        <div class="field">
          <label class="label" for="longitude">Longitude</label>
          <div class="input-wrapper">
            <input id="longitude" name="longitude" type="number" step="any" class="input" required spellcheck="false"
              autocomplete="off" value="{{residence.longitude}}">
          </div>
        </div>
        <div class="field">
          <label class="label" for="status">Status</label>
          <div class="input-wrapper">
            <input id="status" name="status" type="text" class="input" required spellcheck="false" autocomplete="false"
              value="{{residence.status}}">
            <p class="help">confirmed, pending</p>
          </div>
        </div>
        <div class="field">
          <label for="address_num" class="label">Street Number</label>
          <div class="input-wrapper">
            <input id="address_num" name="address_num" type="number" class="input" required spellcheck="false"
              autocomplete="false" value="{{residence.address_num}}">
          </div>
        </div>
        <div class="field">
          <label for="address_street" class="label">Street</label>
          <div class="input-wrapper">
            <input id="address_street" name="address_street" type="text" class="input" required spellcheck="false"
              autocomplete="false" value="{{residence.address_street}}">
          </div>
        </div>
        <div class="field">
          <label for="address_city" class="label">City</label>
          <div class="input-wrapper">
            <input id="address_city" name="address_city" type="text" class="input" required spellcheck="false"
              autocomplete="false" value="{{residence.address_city}}">
          </div>
        </div>
        <div class="field">
          <label for="address_state" class="label">Province/State</label>
          <div class="input-wrapper">
            <input id="address_state" name="address_state" type="text" class="input" required
              value="{{residence.address_state}}">
          </div>
        </div>
        <div class="field">
          <label for="postal_code" class="label">Postal Code/Zip code</label>
          <div class="input-wrapper">
            <input id="postal_code" name="postal_code" type="text" class="input" required
              value="{{residence.postal_code}}">
          </div>
        </div>
        <div class="field">
          <label for="address_country" class="label">Country</label>
          <div class="input-wrapper">
            <input id="address_country" name="address_country" type="text" class="input" required
              value="{{residence.address_country}}">
          </div>
        </div>
        <button class="button is-primary full-width" type="submit">Save <i class="fa fa-save"
            aria-hidden="true"></i></button>
      </form>
    </div>
  </div>
</section>